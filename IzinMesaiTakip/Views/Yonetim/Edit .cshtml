@model IzinMesaiTakip.Models.Kullanici

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Kullanıcıyı Güncelle</h2>

<form method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" name="KullaniciID" value="@Model.KullaniciID" />

    <div class="form-group">
        <label>Ad Soyad</label>
        <input class="form-control" value="@Model.Ad @Model.Soyad" disabled />
    </div>

    <div class="form-group">
        <label>Rol</label>
        @(Html.DropDownList("RolID", null, "Seçiniz", new { @class = "form-control" }))
    </div>

    <div class="form-group">
        <label>Departman</label>
        @(Html.DropDownList("DepartmanID", null, "Seçiniz", new { @class = "form-control" }))
    </div>

    <button type="submit" class="btn btn-success">Kaydet</button>
    <a href="/Yonetim/Index" class="btn btn-secondary">İptal</a>
</form>
